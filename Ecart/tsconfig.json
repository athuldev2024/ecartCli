{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@hooks/*": ["hooks/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@navigation/*": ["navigation/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@database/*": ["database/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "ios/Pods", "android/build"]
}